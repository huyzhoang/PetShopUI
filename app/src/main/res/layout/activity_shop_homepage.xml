<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".HomeActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#FFFFFF">

        <include layout="@layout/toolbar_homepage"/>

    </android.support.v7.widget.CardView>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.7dp"
                android:layout_marginRight="16.7dp"
                android:layout_marginLeft="16.7dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14.7sp"
                    android:text="For You"
                    android:fontFamily="Nunito_Black"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:fontFamily=""
                    android:textColor="#535353"
                    android:textSize="11.7sp"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerViewForYou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16.7dp"
                android:paddingTop="16.7dp"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="16.7dp"
                android:layout_marginLeft="16.7dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14.7sp"
                    android:text="Services"
                    android:fontFamily=""
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:fontFamily=""
                    android:textColor="#535353"
                    android:textSize="11.7sp"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerViewCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16.7dp"
                android:paddingTop="16.7dp"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="16.7dp"
                android:layout_marginLeft="16.7dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14.7sp"
                    android:text="Discount"
                    android:fontFamily=""
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:fontFamily=""
                    android:textColor="#535353"
                    android:textSize="11.7sp"/>
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerViewDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16.7dp"
                android:paddingTop="16.7dp"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="16.7dp"
                android:layout_marginLeft="16.7dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14.7sp"
                    android:text="Nearby"
                    android:fontFamily=""
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:fontFamily=""
                    android:textColor="#535353"
                    android:textSize="11.7sp"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerViewNearby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16.7dp"
                android:paddingTop="16.7dp"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"/>


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>